<div class="navbar bg-base-100">
  <div class="">
    <a class="btn btn-ghost text-xl">Juicimo Task</a>
  </div>

  <% if user_signed_in? %>
    <div class="navbar-start lg:flex-1">
      <ul class="menu menu-horizontal px-1">
        <li><%= link_to t('.projects'), projects_path %></li>
        <li><%= link_to t('.tags'), tags_path %></li>
        <li><%= link_to t('.tasks'), tasks_path %></li>
        <li> <%= link_to t('.new_task'), new_task_path, class: "btn btn-primary btn-sm" %> </li>
      </ul>
    </div>
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img
            alt="User Avatar"
            src="data:image/jpeg;base64," />
        </div>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
        <li><%= link_to t('.profile'), edit_user_registration_path, class: "justify-between" %></li>
        <li>
          <%= link_to t('.logout'), destroy_user_session_path, method: :delete, data: {turbo_method: :delete} %>
        </li>
      </ul>
    </div>
  <% else %>
    <ul class="menu menu-sm bg-base-100 rounded-box ml-auto">
      <li><%= link_to 'Login', new_user_session_path %></li>
      <li><%= link_to 'Register', new_user_registration_path %></li>
    </ul>
  <% end %>

</div>